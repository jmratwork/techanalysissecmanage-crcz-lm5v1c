# Winlogbeat configuration
winlogbeat.event_logs:
  - name: Application
  - name: Security
  - name: Microsoft-Windows-PowerShell/Operational
# NG-SIEM collector output
# ng_siem_collector_host and ng_siem_collector_port provide the collector endpoint
output.ng_siem:
  hosts: ["{{ ng_siem_collector_host | default('localhost') }}:{{ ng_siem_collector_port | default(5044) }}"]
